@model IEnumerable<Vidly.Models.Customer>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Customers</h1>
<p>
    @Html.ActionLink("Add Customer","new","customer",new {@class="btn btn-primary"}) 
</p>
<table id="customers" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Membership Type</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cus in Model)
        {

            <tr>
                <td>
                    @Html.ActionLink(cus.CustomerName, "Edit", "Customers", new { id = cus.CustomerId }, null)
                </td>
                <td>@cus.MembershipType.Name</td>
                <td>
                    <button customer-id="@cus.CustomerId" id="deleteBtn" class="btn-link js-btnlink">Delete</button>
                </td>
            </tr>

        }
    </tbody>
    
</table>

@section scripts
{
    <script>
        $(document).ready(function() {
            $('#customers').DataTable();

            $('#customers .js-btnlink').on('click', function () {
                alert($(this).attr("customer-id"));
            });
        });
        
    </script>
}